<Window x:Class="TODOList2000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TODOList2000"
        mc:Ignorable="d"
        Title="TODOList2000" Height="450" Width="826">
    <Grid>

        <ListBox x:Name="stackp_main" Margin="10,45,10,10"/>

        <DatePicker x:Name="dp_main" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FirstDayOfWeek="Monday" SelectedDateChanged="dp_changedSelectedDate"/>
        <Button x:Name="btn_save" Content="Save" HorizontalAlignment="Left" Margin="731,4,0,0" VerticalAlignment="Top" Width="75" Height="36"/>
        <Button x:Name="btn_add_todo" Content="Add TODO" HorizontalAlignment="Left" Margin="651,4,0,0" VerticalAlignment="Top" Width="75" Height="36" Click="btn_save_Copy_Click"/>


    </Grid>
</Window>
