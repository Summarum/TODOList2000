<Window x:Class="TODOList2000.TodoAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TODOList2000"
        mc:Ignorable="d"
        Title="Add new TODO" Height="223" Width="600" ResizeMode="NoResize" >
    <Grid>
        <TextBox x:Name="addTB" HorizontalAlignment="Center" Margin="0,50,0,0" TextWrapping="Wrap" Text="TODO" VerticalAlignment="Top" Height="147" Width="580"/>
        <Button x:Name="addBTN" Content="Add" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="59" Height="35" Click="add_btn_click"/>

    </Grid>
</Window>
